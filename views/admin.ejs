<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Admin</title>
    <style media="screen">
      tr, td, table{
        border: solid 1px black;
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <td>
          STT
        </td>
        <td>
          Tiêu đề
        </td>
        <td>
          Hình ảnh
        </td>
        <td>
          Video
        </td>
        <td>
          Quản lý
        </td>
      </tr>
      <%
        mangSanPham.forEach(function(e, i){
          %>
          <tr>
            <td>
              <%= i + 1 %>
            </td>
            <td>
              <%= e.title %>
            </td>
            <td>
              <img src="/images/background/<%= e.image %>" width="200px"/>
            </td>
            <td>
              <a href="https://vimeo.com/<%= e.video %>">video</a>
            </td>
            <td>
              <a href="/sua/<%= i %>">Sửa</a>
              <br>
              <a href="/xoa/<%= i %>">Xoá</a>
            </td>
          </tr>
          <%
        })
      %>
    </table>
    <a href="/add">Thêm sản phẩm</a>
  </body>
</html>
